@model List<BlogCategory>

@{
    int count = 0;
}

<h2>Deleted Blog Categories</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No deleted Blog Categories found.
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Setting</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var BlogCategory in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@BlogCategory.Name</td>

                    <td>
                        <a asp-controller="BlogCategory" asp-action="Restore" asp-route-id="@BlogCategory.Id" class="btn btn-success">
                            <i class="mdi mdi-restore"></i>
                        </a>
                        <a asp-controller="BlogCategory" asp-action="HardDelete" asp-route-id="@BlogCategory.Id" class="btn btn-danger">
                            <i class="mdi mdi-delete-forever"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div style="margin-top: 20px;">
    <a asp-controller="BlogCategory" asp-action="Index" class="btn btn-secondary">Back to Blog Categories</a>
</div>

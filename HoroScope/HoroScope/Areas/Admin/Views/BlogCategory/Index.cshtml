@model List<GetBlogCategoryVM>

@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog Categories</h4>

            <a asp-controller="BlogCategory" asp-action="DeletedCategories" class="btn btn-danger">Show Deleted Categories</a>
            <a asp-controller="BlogCategory" asp-action="Create" class="btn btn-light">Create</a>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
    
                            <th>Setting</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (GetBlogCategoryVM getBlogCategoryVM in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@getBlogCategoryVM.Name</td>
                   
                                <td>
 <a asp-controller="BlogCategory" asp-action="Update" asp-route-id="@getBlogCategoryVM.Id" class="btn btn-primary"><i class="mdi mdi-pencil-box"></i></a>
                                    <a asp-controller="BlogCategory" asp-action="Delete" asp-route-id="@getBlogCategoryVM.Id" class="btn btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this Category?')">
                                        <i class="mdi mdi-delete-forever"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
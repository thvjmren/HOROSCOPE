@model GetContactVM

<div class="col-lg-8 offset-lg-2 mt-4">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Message Detail</h4>

            <div class="mb-3">
                <strong>Name:</strong>
                <p>@Model.Name</p>
            </div>

            <div class="mb-3">
                <strong>Email:</strong>
                <p>@Model.Email</p>
            </div>

            <div class="mb-3">
                <strong>Created Time:</strong>
                <p>@Model.CreatedAt.ToString("d MMMM yyyy HH:mm")</p>
            </div>

            <div class="mb-3">
                <strong>Message:</strong>
                <div style="
                    white-space: pre-wrap;
                    background: #212529;
                    padding: 20px;
                    border-radius: 10px;
                    color: #f8f9fa;
                    font-size: 18px;
                    line-height: 1.6;
                    border: 1px solid #444;
                ">
                    @Model.Message
                </div>
            </div>

            <a asp-action="Index" class="btn btn-secondary mt-3">← Back to Messages</a>
        </div>
    </div>
</div>

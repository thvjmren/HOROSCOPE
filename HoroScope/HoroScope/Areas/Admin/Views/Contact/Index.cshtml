@model List<GetContactVM>

@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Messages</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Message</th>
                            <th>Created Time</th>
                            <th>Setting</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (GetContactVM getContactVM in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@getContactVM.Name</td>
                                <td>@getContactVM.Email</td>
                                <td>@getContactVM.Message</td>
                                <td>@getContactVM.CreatedAt.ToString("d MMMM yyy HH:mm")</td>
                                <td>
                                    <a asp-controller="Contact" asp-action="Details" asp-route-id="@getContactVM.Id" class="btn btn-primary">
                                        <i class="mdi mdi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
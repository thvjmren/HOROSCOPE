@model List<GetServiceCategoryVM>

@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Service Categories</h4>
            <a asp-action="Create" class="btn btn-info">Create</a>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Created Time</th>
                            <th>Setting</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (GetServiceCategoryVM serviceCategoryVM in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@serviceCategoryVM.Name</td>
                                <td>@serviceCategoryVM.CreatedAt.ToString("d MMMM yyy HH:mm")</td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@serviceCategoryVM.Id" class="btn btn-primary">Update</a>
                                    <a asp-action="Delete" asp-route-id="@serviceCategoryVM.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
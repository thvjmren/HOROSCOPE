@model List<GetServiceVM>

@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Services</h4>
                        <a asp-controller="Service" asp-action="DeletedServices" class="btn btn-danger">Show Deleted Services</a>
            <a asp-action="Create" class="btn btn-info">Create</a>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Icon</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Setting</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (GetServiceVM serviceVM in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@serviceVM.Name</td>
                                <td>@serviceVM.Icon</td>
                                <td>@serviceVM.Description</td>
                                <td>@serviceVM.CategoryName</td>
                                <td>@(serviceVM.IsFree ? "0" : $"${serviceVM.Price:0.##}")</td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@serviceVM.Id" class="btn btn-primary mb-2">
                                        <i class="mdi mdi-pencil-box"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@serviceVM.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Service?')">
                                        <i class="mdi mdi-delete-forever"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

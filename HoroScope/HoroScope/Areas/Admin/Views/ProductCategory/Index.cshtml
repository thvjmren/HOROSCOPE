@model List<GetProductCategoryVM>

@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Product Categories</h4>

            <a asp-controller="ProductCategory" asp-action="DeletedCategories" class="btn btn-danger">Show Deleted Categories</a>
            <a asp-controller="ProductCategory" asp-action="Create" class="btn btn-light">Create</a>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Features</th>
                            <th>Setting</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (GetProductCategoryVM productCategoryVM in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@productCategoryVM.Name</td>
                                <td>
                                    @foreach (var feature in productCategoryVM.Features)
                                    {
                                        <span>@feature.FeatureName</span>

                                        <br />
                                    }
                                </td>
                                <td>

                                    <a asp-controller="ProductCategory" asp-action="Details" asp-route-id="@productCategoryVM.Id" class="btn btn-info"><i class="mdi mdi-eye"></i></a>
                                    <a asp-controller="ProductCategory" asp-action="Update" asp-route-id="@productCategoryVM.Id" class="btn btn-primary"><i class="mdi mdi-pencil-box"></i></a>
                                    <a asp-controller="ProductCategory" asp-action="Delete" asp-route-id="@productCategoryVM.Id" class="btn btn-danger" 
                                    onclick="return confirm('Are you sure you want to delete this Category?')">
                                        <i class="mdi mdi-delete-forever"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@model CreateProductCategoryVM

<div class="col-lg-8 offset-lg-2 mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-center mb-4 text-primary">Create Product Category</h4>

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label for="Name" class="form-label">Category Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
                </div>

                <div class="mb-3">
                    <label for="Features" class="form-label">Select Features</label>
                    <select asp-for="SelectedFeatures" class="form-control" asp-items="@(new SelectList(ViewBag.Features, "Id", "Name"))" multiple="multiple">
                        <option value="">Select Features</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>

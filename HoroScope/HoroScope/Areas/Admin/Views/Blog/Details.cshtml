
@model GetBlogVM

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h3 class="mb-0">@Model.Title</h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-5">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="~/assets/images/content/blog/@Model.Image" alt="@Model.Title" class="img-fluid rounded-3 border" style="max-height:350px; object-fit:contain;" />
                    }

                    <div class="d-flex flex-wrap gap-3 mb-3">
                        <span class="badge bg-info text-dark">Likes: @Model.LikesCount</span>
                        <span class="badge bg-warning text-dark">Comments: @Model.CommentsCount</span>
                        <span class="badge bg-secondary">Created On: @Model.CreatedDate.ToString("MMM dd, yyyy", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</span>

                    </div>
                </div>

                <div class="col-md-7">
                    <h5 class="text-muted mb-3">Category: <span class="fw-semibold">@Model.BlogCategoryName</span></h5>
                    <p class="mb-3" style="white-space: pre-wrap; font-size: 1.1rem; color: #c8c8c8db;">@Model.Content</p>
                </div>
            </div>

            <hr class="my-4" style="border-color: #e0e0e0;">

            <a asp-action="Index" class="btn btn-outline-primary mt-4 px-4 py-2 rounded-3">← Back to Blogs</a>
        </div>
    </div>
</div>

@model CreateBlogVM

<div class="row">

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Blog</h4>

                <form method="post" enctype="multipart/form-data" class="forms-sample">

                    <div class="form-group">
                        <label asp-for="Image">Photo</label>
                        <input asp-for="Image" accept="image/*" class="form-control">
                        <span class="text-danger" asp-validation-for="Image"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Title">Name</label>
                        <input asp-for="Title" class="form-control" placeholder="Title">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Content">Content</label>
                        <textarea rows="8" asp-for="Content" class="form-control" placeholder="Content"></textarea>
                        <span class="text-danger" asp-validation-for="Content"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BlogCategoryId">Category</label>
                        <select asp-for="BlogCategoryId" class="form-control"
                                asp-items="@(new SelectList(Model.BlogCategories,nameof(BlogCategory.Id),nameof(BlogCategory.Name)))">
                            <option selected disabled>Choose Category</option>
                        </select>
                        <span class="text-danger" asp-validation-for="BlogCategoryId"></span>
                    </div>

                    <input type="submit" class="btn btn-primary me-2"></input>
                    <button asp-action="index" class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
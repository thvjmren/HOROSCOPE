<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

@{
    Layout = null;
}

    @model LoginVM


<style>
    body {
        background-color: #331847;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        color: #f0e6ff;
        height: 100vh;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-container {
        background: rgba(255, 255, 255, 0.1);
        padding: 40px 40px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        width: 360px;
        box-sizing: border-box;
        text-align: center;
    }

    h2 {
        margin-bottom: 30px;
        color: #f0e6ff;
        font-weight: 600;
        font-size: 28px;
    }

    form {
        text-align: left;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        color: #dcd0ff;
    }

    input.form-control {
        width: 100%;
        padding: 10px 12px;
        margin-bottom: 20px;
        border-radius: 4px;
        border: none;
        outline: none;
        box-sizing: border-box;
        font-size: 15px;
    }

        input.form-control:focus {
            box-shadow: 0 0 6px 2px rgba(155, 89, 182, 0.6);
        }

    .position-relative {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #aaa;
        user-select: none;
        font-size: 18px;
    }

    .text-danger {
        color: #ff6b6b;
        font-size: 13px;
        margin-top: -16px;
        margin-bottom: 10px;
        display: block;
    }

    .form-check {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .form-check input[type="checkbox"] {
            margin-right: 8px;
            width: 16px;
            height: 16px;
        }

        .form-check label {
            margin: 0;
            font-weight: 500;
            color: #dcd0ff;
            cursor: pointer;
        }

    .forgot-password {
        text-align: right;
        margin-bottom: 25px;
    }

        .forgot-password a {
            color: #9b59b6;
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
        }

            .forgot-password a:hover {
                text-decoration: underline;
                color: #7D3C98;
            }

    button.btn-outline-dark {
        width: 100%;
        padding: 12px;
        background-color: rgba(173, 128, 191, 0.47);
        border: none;
        color: white;
        font-weight: 700;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
        box-shadow: 0 4px 8px rgba(155, 89, 182, 0.4);
        transition: background-color 0.3s ease;
    }

        button.btn-outline-dark:hover {
            background-color: #7D3C98;
        }

    .register-link {
        margin-top: 20px;
        text-align: center;
        font-size: 14px;
        color: #dcd0ff;
    }

        .register-link a {
            color: #9b59b6;
            font-weight: 600;
            text-decoration: none;
            margin-left: 5px;
        }

            .register-link a:hover {
                text-decoration: underline;
                color: #7D3C98;
            }
</style>


<div class="login-container">
    <h2>Login</h2>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input asp-for="UsernameOrEmail" class="form-control" placeholder="Username or Email" />
        <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>

        <div class="position-relative">
            <input asp-for="Password" type="password" class="form-control" id="passwordInput" placeholder="Password" />
            <i class="fa fa-eye password-toggle" id="togglePassword" aria-label="Toggle password visibility"></i>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>

        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe" />
            <label for="rememberMe">Remember Me</label>
        </div>

        <div class="forgot-password">
            <a href="/Account/ForgotPassword">Forgot Password?</a>
        </div>

        <button type="submit" class="btn btn-outline-dark">Login</button>

        <div class="register-link">
            <span>Don't have an account?</span>
            <a asp-controller="Account" asp-action="Register">Sign Up</a>
        </div>
    </form>
</div>

<script>
    const togglePassword = document.getElementById("togglePassword");
    const passwordInput = document.getElementById("passwordInput");

    togglePassword.addEventListener("click", function () {
        const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
        passwordInput.setAttribute("type", type);
        this.classList.toggle("fa-eye");
        this.classList.toggle("fa-eye-slash");
    });
</script>

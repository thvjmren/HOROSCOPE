<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

@{
    Layout = null;
}

@model RegisterVM

<style>
        body {
            background-color: #331847;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            color: #f0e6ff;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .register-container {
            background: rgba(255, 255, 255, 0.1);
            padding: 40px 40px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
            width: 380px;
            box-sizing: border-box;
            text-align: center;
        }

        h2 {
            margin-bottom: 30px;
            color: #f0e6ff;
            font-weight: 600;
            font-size: 28px;
        }

        form {
            text-align: left;
        }

        label {
            display: block;
            margin-bottom: 6px;
            font-weight: 600;
            color: #dcd0ff;
        }

        input.form-control {
            width: 100%;
            padding: 10px 12px;
            margin-bottom: 20px;
            border-radius: 4px;
            border: none;
            outline: none;
            box-sizing: border-box;
            font-size: 15px;
        }

            input.form-control:focus {
                box-shadow: 0 0 6px 2px rgba(155, 89, 182, 0.6);
            }

        .position-relative {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #aaa;
            user-select: none;
            font-size: 18px;
        }

        .text-danger {
            color: #ff6b6b;
            font-size: 13px;
            margin-top: -16px;
            margin-bottom: 10px;
            display: block;
        }

        .form-check {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

            .form-check input[type="checkbox"] {
                margin-right: 8px;
                width: 16px;
                height: 16px;
            }

            .form-check label {
                margin: 0;
                font-weight: 500;
                color: #dcd0ff;
                cursor: pointer;
            }

        button.btn-outline-dark {
            width: 100%;
            padding: 12px;
            background-color: rgba(173, 128, 191, 0.47);
            border: none;
            color: white;
            font-weight: 700;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
            box-shadow: 0 4px 8px rgba(155, 89, 182, 0.4);
            transition: background-color 0.3s ease;
        }

            button.btn-outline-dark:hover {
                background-color: #7D3C98;
            }

        .login-link {
            margin-top: 20px;
            text-align: center;
            font-size: 14px;
            color: #dcd0ff;
        }

            .login-link a {
                color: #9b59b6;
                font-weight: 600;
                text-decoration: none;
                margin-left: 5px;
            }

                .login-link a:hover {
                    text-decoration: underline;
                    color: #7D3C98;
                }
    </style>


<div class="register-container">
    <h2>Register</h2>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <input asp-for="Name" class="form-control" placeholder="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <input asp-for="Surname" class="form-control" placeholder="Surname" />
        <span asp-validation-for="Surname" class="text-danger"></span>

        <input asp-for="Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <input asp-for="UserName" class="form-control" placeholder="Username" />
        <span asp-validation-for="UserName" class="text-danger"></span>

        <div class="position-relative">
            <input asp-for="Password" type="password" class="form-control" id="passwordInput" placeholder="Password" />
            <i class="fa fa-eye password-toggle" id="togglePassword" aria-label="Toggle password visibility"></i>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>

        <div class="position-relative">
            <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPasswordInput" placeholder="Confirm Password" />
            <i class="fa fa-eye password-toggle" id="toggleConfirmPassword" aria-label="Toggle confirm password visibility"></i>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>


        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe" />
            <label for="rememberMe">Remember Me</label>
        </div>

        <button type="submit" class="btn btn-outline-dark">Register</button>

        <div class="login-link">
            <span>Do you have an account?</span>
            <a asp-controller="Account" asp-action="Login">Login</a>
        </div>
    </form>
</div>

<script>
    const togglePassword = document.getElementById("togglePassword");
    const passwordInput = document.getElementById("passwordInput");

    togglePassword.addEventListener("click", function () {
        const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
        passwordInput.setAttribute("type", type);
        this.classList.toggle("fa-eye");
        this.classList.toggle("fa-eye-slash");
    });
</script>



@{
    Layout = null;
}
@{
    ViewData["Title"] = "Access Denied";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body {
        background-color: #331847;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        color: #f0e6ff;
        height: 100vh;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .access-denied-container {
        background: rgba(255, 255, 255, 0.1);
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        width: 400px;
        text-align: center;
    }

    h1 {
        color: #ff6b6b;
        font-size: 32px;
        margin-bottom: 20px;
    }

    p {
        font-size: 16px;
        margin-bottom: 30px;
        color: #dcd0ff;
    }

    a.btn-back {
        display: inline-block;
        padding: 12px 24px;
        background-color: rgba(173, 128, 191, 0.47);
        color: white;
        font-weight: 600;
        font-size: 16px;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s ease;
        box-shadow: 0 4px 8px rgba(155, 89, 182, 0.4);
    }

        a.btn-back:hover {
            background-color: #7D3C98;
        }
</style>

<div class="access-denied-container">
    <h1><i class="fas fa-exclamation-triangle"></i> Access Denied</h1>
    <p>You do not have permission to access this page.</p>
    <a href="/" class="btn-back"><i class="fas fa-arrow-left"></i> Back to Home</a>
</div>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Email Confirmation Successful</title>
    <meta http-equiv="refresh" content="3;url=/" />
    <style>
        body {
            margin: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: #331847;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #ffffff;
        }

        .message-container {
            background: rgba(255, 255, 255, 0.1);
            padding: 40px 50px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
            text-align: center;
            max-width: 400px;
            width: 90%;
        }

        h1 {
            font-weight: 600;
            font-size: 26px;
            margin-bottom: 20px;
            color: #f0e6ff;
        }

        p {
            font-size: 16px;
            color: #dcd0ff;
            margin-bottom: 30px;
        }

        .btn-home {
            display: inline-block;
            padding: 12px 30px;
            background-color: rgba(173, 128, 191, 0.47);
            color: white;
            text-decoration: none;
            font-weight: 600;
            border-radius: 4px;
            box-shadow: 0 4px 8px rgba(155, 89, 182, 0.4);
            transition: background-color 0.3s ease;
        }

            .btn-home:hover {
                background-color: #7D3C98;
            }
    </style>
</head>
<body>
    <div class="message-container">
        <h1>Email Confirmation Was Successful</h1>
        <p>You will be redirected to the homepage shortly.</p>
        <a href="/" class="btn-home">Go to Home Now</a>
    </div>

    <script>
        setTimeout(function () {
            window.location.href = "/";
        }, 3000);
    </script>
</body>
</html>

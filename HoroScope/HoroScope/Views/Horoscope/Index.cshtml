@model HoroscopeInputModel

@{
    Layout = null;
    ViewData["Title"] = "Horoscope";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body {
        background-color: #331847;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        color: #f0e6ff;
        height: 100vh;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 20px;
    }

    .form-box {
        background: rgba(255, 255, 255, 0.1);
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        max-width: 400px;
        width: 100%;
        box-sizing: border-box;
    }

    h2 {
        margin-bottom: 20px;
        color: #f0e6ff;
        font-weight: 600;
        font-size: 28px;
        text-align: center;
    }

    label {
        display: block;
        margin-top: 15px;
        margin-bottom: 5px;
        font-weight: 600;
        text-align: left;
        color: #dcd0ff;
    }

    select, input[type="text"], input[type="date"], input[type="time"] {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 6px;
        margin-bottom: 10px;
        font-size: 16px;
        box-sizing: border-box;
    }

    button {
        margin-top: 20px;
        width: 100%;
        padding: 12px 0;
        background-color: rgba(173, 128, 191, 0.8);
        color: white;
        font-weight: 700;
        font-size: 18px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        box-shadow: 0 4px 8px rgba(155, 89, 182, 0.4);
        transition: background-color 0.3s ease;
    }

        button:hover {
            background-color: #7D3C98;
        }

    .validation-errors {
        margin-top: 15px;
        color: #ff6b6b;
        text-align: left;
    }

        .validation-errors p {
            margin: 0;
        }

    fieldset {
        display: flex;
        gap: 10px;
        justify-content: center;
        flex-wrap: nowrap;
        margin-bottom: 15px;
        border: none;
        padding: 0;
    }

        fieldset.time-select {
            align-items: center;
        }

        fieldset > select {
            flex: 1;
            max-width: 80px;
            padding: 8px;
            border-radius: 6px;
            border: none;
            font-size: 16px;
        }

    .time-separator {
        font-size: 20px;
        line-height: 1;
        padding: 0 5px;
        color: #f0e6ff;
        user-select: none;
    }
</style>

<div class="form-box">
    <h2>Enter your birth details</h2>

    <form asp-action="Index" method="post">

        <label asp-for="City">City</label>
        <input asp-for="City" type="text" placeholder="Enter your city" required />

        <label for="day"><em>*</em> Birth Date</label>
        <fieldset>
            <select id="day" name="day" required>
                @for (int d = 1; d <= 31; d++)
                {
                    <option value="@d">@d</option>
                }
            </select>

            <select id="month" name="month" required>
                <option value="1">January</option>
                <option value="2">February</option>
                <option value="3">March</option>
                <option value="4">April</option>
                <option value="5">May</option>
                <option value="6">June</option>
                <option value="7">July</option>
                <option value="8">August</option>
                <option value="9">September</option>
                <option value="10">October</option>
                <option value="11">November</option>
                <option value="12">December</option>
            </select>

            <select id="year" name="year" required>
                @for (int y = 2025; y >= 1980; y--)
                {
                    <option value="@y">@y</option>
                }
            </select>
        </fieldset>

        <label for="hour"><em>*</em> Birth Time</label>
        <fieldset class="time-select">
            <select id="hour" name="hour" required>
                @for (int h = 0; h <= 23; h++)
                {
                    var val = h.ToString("D2");
                    <option value="@val">@val</option>
                }
            </select>

            <span class="time-separator">:</span>

            <select id="minute" name="minute" required>
                @for (int m = 0; m <= 59; m++)
                {
                    var val = m.ToString("D2");
                    <option value="@val">@val</option>
                }
            </select>
        </fieldset>

        <button type="submit">Get Horoscope</button>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="validation-errors">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
</div>

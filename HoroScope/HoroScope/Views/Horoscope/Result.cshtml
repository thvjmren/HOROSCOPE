@model AstroResponse

@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body {
        background-color: #331847;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        color: #f0e6ff;
        height: 100vh;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 20px;
    }

    .result-box {
        background: rgba(255, 255, 255, 0.1);
        padding: 20px 30px; 
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        max-width: 320px; 
        width: 100%;
    }

    h2 {
        margin-bottom: 20px;
        color: #f0e6ff;
        font-weight: 600;
        font-size: 28px;
    }

    ul {
        list-style-type: none;
        padding: 0;
        margin-bottom: 30px;
        text-align: left;
    }

        ul li {
            padding: 6px 0;
            font-size: 18px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

    a.back-btn {
        display: inline-block;
        padding: 12px 30px;
        background-color: rgba(173, 128, 191, 0.8);
        color: white;
        font-weight: 700;
        font-size: 16px;
        border-radius: 6px;
        text-decoration: none;
        box-shadow: 0 4px 8px rgba(155, 89, 182, 0.4);
        transition: background-color 0.3s ease;
    }

        a.back-btn:hover {
            background-color: #7D3C98;
        }
</style>

<div class="result-box">
    <h2>Your Horoscope</h2>

    <ul>
        <li>Sun: @Model.Sun</li>
        <li>Moon: @Model.Moon</li>
        <li>Rising : @Model.Ascendant</li>
    </ul>

    <a asp-action="Index" class="back-btn">Back</a>
</div>

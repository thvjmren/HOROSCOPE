<!-- hs about ind wrapper Start -->
<div class="hs_about_indx_main_wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="hs_about_heading_main_wrapper">
                    <div class="hs_about_heading_wrapper">
                        <h2>You still haven’t uncovered your zodiac secrets?</span></h2>
                        <h4><span></span></h4>
                        <p>
                            Have you ever wondered what the stars say about you? ✨<br />
                            Your zodiac sign reveals more than just your traits — it opens the door to cosmic wisdom, guiding your path through love, growth, and self-discovery. With just a few birth details, unlock your sun, moon, and rising signs in seconds.
                        </p>
                    </div>
                </div>
            </div>

            @foreach (AboutUs aboutUs in Model.AboutUs)
            {
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="hs_about_left_img_wrapper">
                        <img src="~/assets/images/content/@aboutUs.Image" alt="about_img" />
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="hs_about_right_cont_wrapper">
                        <h2>@aboutUs.Title</h2>
                        <p>
                            @aboutUs.Description
                        </p>
                        <div class="hs_effect_btn hs_about_btn">
                            <ul>
                                <li>
                                    <a asp-controller="Horoscope" asp-action="Index" class="hs_btn_hover">
                                        Discover                                      </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- hs about ind wrapper End -->
<!-- hs title wrapper Start -->
<div class="hs_title_main_wrapper">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="hs_about_heading_main_wrapper">
                <div class="hs_about_heading_wrapper">
                    <h2>Our <span> Products</span></h2>
                    <h4><span></span></h4>
                    <p>
                        Channel the Power of Crystals
                        Discover our curated selection of natural gemstones, each aligned with specific zodiac signs and energetic properties. Whether for healing, clarity, or protection, these powerful crystals can support your personal journey and elevate your spiritual practices.
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (Product product in Model.Products)
            {
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="hs_title_box_main_wrapper">
                        <div class="hs_title_img_wrapper">
                            <img src="~/assets/images/content/shop/@product.ProductImages?.FirstOrDefault(pi=>pi.IsPrimary==true)?.Image">
                            <ul>
                                <li>$@product.Price </li>
                            </ul>
                        </div>
                        <div class="hs_title_img_cont_wrapper">
                            <h2><a href="#">@product.Name</a></h2>
                            <p>
                                @(product.Description.Length > 200
                                    ? product.Description.Substring(0, 200) + "..."
                                    : product.Description)
                            </p>

                            <h5><a asp-controller="Shop" asp-action="Details" asp-route-id="@product.Id">Read More <i class="fa fa-long-arrow-right"></i></a></h5>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<!-- hs title wrapper End -->

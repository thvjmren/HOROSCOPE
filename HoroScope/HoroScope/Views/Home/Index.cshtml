<!-- hs latest news wrapper Start -->
<div class="hs_latest_news_main_wrapper">
    <div class="hs_news_slider_bg_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="hs_about_heading_main_wrapper">
                    <div class="hs_about_heading_wrapper">
                        <h2>Latest <span> Blogs</span></h2>
                        <h4><span></span></h4>
                        <p>
                            Stay Informed with the Stars
                            Discover the latest updates from the world of astrology, spiritual wellness, and cosmic trends. From planetary movements to zodiac predictions and self-care rituals — our blog keeps you aligned, inspired, and in tune with the universe.
                        </p>
                    </div>
                </div>
            </div>

            @foreach (Blog blog in Model.Blogs)
            {
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <div class="hs_lest_news_box_wrapper">
                        <div class="hs_lest_news_img_wrapper">
                            <img src="~/assets/images/content/blog/@blog.Image">
                            <div class="hs_lest_news_date_wrapper">
                                <ul>
                                    <li>@blog.CreatedAt.ToString("dd")</li>
                                    <li>@blog.CreatedAt.ToString("MMM").ToUpper()</li>
                                </ul>
                            </div>
                        </div>
                        <div class="hs_lest_news_cont_wrapper">
                            <h5>@blog.Title</h5>
                            <p>
                                @(blog.Content.Length > 200
                                    ? blog.Content.Substring(0, 200) + "..."
                                    : blog.Content)
                            </p>
                            <h4><a href="#">Read More <i class="fa fa-long-arrow-right"></i></a></h4>
                        </div>
                        <div class="hs_lest_news_cont_bottom">
                            <div class="hs_lest_news_cont_bottom_left">
                                <p><a href="#">by - @blog.AppUser.Name</a></p>
                            </div>
                            <div class="hs_lest_news_cont_bottom_center">
                                <p><a href="#">@blog.Likes.Count Likes</a></p>
                            </div>
                            <div class="hs_lest_news_cont_bottom_right">
                                <p><a href="#">@blog.Comments.Count Comments</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- hs latest news wrapper End -->



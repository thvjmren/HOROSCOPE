@model List<HoroScope.Models.Order>

<h2>Orders List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Total Items</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Status</td>
                    <td>@order.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>@order.OrderItems.Sum(i => i.Quantity)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary btn-sm">Details</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

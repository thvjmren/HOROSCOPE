@model HomeVM

<!-- hs subscruption wrapper Start -->
<div class="hs_service_main_wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="hs_about_heading_main_wrapper">
                    <div class="hs_about_heading_wrapper">
                        <h2>Our <span> Subscription Plans</span></h2>
                        <p>
                            We offer a variety of astrology-based tools and personalized subscription plans to empower your journey.<br />
                            Choose the best plan that fits your needs and start exploring today.
                        </p>
                    </div>

                </div>
            </div>

            <div class="portfolio-area ptb-100">
                <div class="container">
                    <div class="row justify-content-center">
                        <div id="gridWrapper" class="clearfix">

                            @foreach (var plan in Model.SubscriptionPlans)
                            {
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 portfolio-wrapper III_column" data-groups='[ "all"]'>
                                    <div class="hs_service_main_box_wrapper">
                                        <div class="hs_service_icon_main_wrapper">
                                            <div class="hs_service_icon_wrapper">
                                                <i class="fa fa-star"></i>
                                                <div class="btc_step_overlay"></div>
                                            </div>
                                        </div>
                                        <div class="hs_service_icon_cont_wrapper">
                                            <h2>@plan.Name</h2>
                                            <p>
                                                @(plan.Description.Length > 100
                                                    ? plan.Description.Substring(0, 100) + "..."
                                                    : plan.Description)
                                            </p>
                                            <h5><a asp-controller="Subscription" asp-action="Index">Read More <i class="fa fa-long-arrow-right"></i></a></h5>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <!--/#gridWrapper-->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container -->
            </div>
            <!--/.portfolio-area-->
        </div>
    </div>
</div>
<!-- hs subscruption wrapper End -->
@model List<BasketItemVM>

<div class="hs_navi_cart_wrapper hidden-xs">
    <div class="dropdown-wrapper menu-button">
        <a class="menu-button" href="#"><i class="flaticon-shop"></i><span id="basketCount">@Model.Count</span></a>
        <div class="drop-menu" style="max-height: 300px; overflow-y: auto;">

            @if (Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <div class="cc_cart_wrapper1 menu-button">
                        <div class="cc_cart_img_wrapper">
                            <img src="~/assets/images/content/shop/@item.Image" width="70px" height="70px" alt="cart_img" />
                        </div>
                        <div class="cc_cart_cont_wrapper">
                            <h4><a href="#">@item.Name</a></h4>
                            <p>@item.Count × $@item.Price.ToString("F2")</p>
                            <h5>$@item.SubTotal.ToString("F2")</h5>
                        </div>
                    </div>
                }

                <div class="cc_cart_wrapper1 menu-button">
                    <div class="hs_effect_btn ceckout_btn">
                        <ul>
                            <li><a asp-controller="Basket" asp-action="Index" class="hs_btn_hover">View Cart</a></li>
                            <li><a asp-controller="Basket" asp-action="CheckOut" class="hs_btn_hover">Checkout</a></li>
                        </ul>
                    </div>
                </div>
            }
            else
            {
                <div class="cc_cart_wrapper1 menu-button">
                    <h4>Your Cart is Empty <a asp-controller="Shop" asp-action="Index">SHOP NOW</a></h4>
                </div>
            }

        </div>
    </div>
</div>

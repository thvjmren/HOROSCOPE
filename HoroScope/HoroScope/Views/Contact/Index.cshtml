@section links {
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/css/responsive.css" />
}

@model ContactVM


<!-- hs About Title Start -->
<div class="hs_indx_title_main_wrapper">
    <div class="hs_title_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 full_width">
                <div class="hs_indx_title_left_wrapper">
                    <h2>Contact Us</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 full_width">
                <div class="hs_indx_title_right_wrapper">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a> &nbsp;&nbsp;&nbsp;> </li>
                        <li>Contact Us</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- hs About Title End -->
<!-- hs contact us Title Start -->
<div class="hs_contact_tittle_main_wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="hs_about_heading_main_wrapper">
                    <div class="hs_about_heading_wrapper">
                        <h2><span>Contact Us Right Now!</span></h2>
                        <h4><span></span></h4>
                        <p>
                            Have questions about your horoscope, our services, or your order? Our friendly support team is here to assist you. Whether you're looking for guidance from an expert or need help navigating the site, don’t hesitate to reach out.
                            We’re just one message away!
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="hs_contact_title_box_wrapper">
                    <div class="hs_service_icon_main_wrapper">
                        <div class="hs_service_icon_wrapper hs_contact_indx_icon_wrapper">
                            <i class="fa fa-phone"></i>
                            <div class="btc_step_overlay"></div>
                        </div>
                    </div>
                    <p>@Model.Phone</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="hs_contact_title_box_wrapper">
                    <div class="hs_service_icon_main_wrapper">
                        <div class="hs_service_icon_wrapper hs_contact_indx_icon_wrapper">
                            <i class="fa fa-envelope"></i>
                            <div class="btc_step_overlay"></div>
                        </div>
                    </div>
                    <p>
                        <a href="#">
                            @Model.Email
                        </a>
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="hs_contact_title_box_wrapper">
                    <div class="hs_service_icon_main_wrapper">
                        <div class="hs_service_icon_wrapper hs_contact_indx_icon_wrapper">
                            <i class="fa fa-map-marker"></i>
                            <div class="btc_step_overlay"></div>
                        </div>
                    </div>
                    <p>
                        @Model.Address
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- hs contact us Title End -->
<!-- hs contact map Start -->
<div class="hs_contact_map_main_wrapper">
    <div id="map" style="width:100%; float:left; height:600px;"></div>
</div>
<!-- hs contact map End -->
<!-- hs contact form Start -->
<div class="hs_contact_indx_form_main_wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="hs_about_heading_main_wrapper">
                    <div class="hs_about_heading_wrapper">
                        <h2><span>Fill Out the Enquiry Form Below!</span></h2>
                        <h4><span></span></h4>
                        <p>
                            We’d love to hear from you. Whether you're curious about your zodiac sign, want to book a consultation, or simply have a general question — just fill out the form and our team will get back to you shortly.
                            Your cosmic journey starts with a message!
                        </p>
                    </div>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="col-12">
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                </div>
            }


            <form asp-action="Contact" method="post">
                @Html.AntiForgeryToken()

                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="hs_kd_six_sec_input_wrapper">
                        <label>Name</label>
                        <input asp-for="Name" placeholder="Name" class="form-control" value="@ViewBag.Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="hs_kd_six_sec_input_wrapper">
                        <label>Email</label>
                        <input asp-for="Email" placeholder="Email" class="form-control" value="@ViewBag.Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="hs_kd_six_sec_input_wrapper">
                        <label>Message</label>
                        <textarea asp-for="Message" placeholder="Message" class="form-control" rows="6"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="hs_contact_indx_form_btn">
                        <ul>
                            <li>
                                <button type="submit" class="hs_btn_hover">Send a Message</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
<!-- hs contact form End -->

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            var map = L.map('map').setView([40.378202, 49.854482], 15);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap contributors'
            }).addTo(map);

            L.marker([40.378202, 49.854482]).addTo(map)
                .bindPopup('This is our office!')
                .openPopup();
        });
    </script>
}


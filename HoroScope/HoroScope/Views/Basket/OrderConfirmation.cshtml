@model HoroScope.Models.Order

@{
    Layout = null;
    decimal total = 0;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Order Confirmation</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            background-color: #331847;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            color: #ffffff;
            min-height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 60px 0 60px 0;
        }

        .confirmation-container {
            background: rgba(255, 255, 255, 0.07);
            padding: 40px;
            border-radius: 10px;
            width: 90%;
            max-width: 700px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
            color: #fff;
        }

        h2 {
            margin-bottom: 25px;
            font-size: 28px;
            font-weight: 600;
            text-align: center;
        }

        h3 {
            margin-top: 30px;
            font-weight: 600;
            border-bottom: 1px solid rgba(255,255,255,0.3);
            padding-bottom: 10px;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

            ul li {
                padding: 8px 0;
                border-bottom: 1px solid rgba(255,255,255,0.1);
                display: flex;
                justify-content: space-between;
            }

        .summary-item {
            font-weight: 700;
            font-size: 18px;
            margin-top: 20px;
            display: flex;
            justify-content: space-between;
        }

        .info-label {
            font-weight: 600;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <h2>Thank you for your order!</h2>

        <p><strong>Order ID:</strong> @Model.Id</p>
        <p><strong>Order Date:</strong> @Model.CreatedAt.ToString("dd MMM yyyy")</p>
        <p><strong>Status:</strong> @Model.Status.ToString()</p>

        <h3>Order Items:</h3>
        <ul>
            @foreach (var item in Model.OrderItems)
            {
                total += item.Quantity * item.UnitPrice;
                <li>
                    <span>@item.Product.Name</span>
                    <span>Qty: @item.Quantity</span>
                    <span>$@item.UnitPrice.ToString("F2")</span>
                </li>
            }
        </ul>

        <div class="summary-item">
            <span>Total:</span>
            <span>$@total.ToString("F2")</span>
        </div>

        <p class="info-label">Shipping Address:</p>
        <p>@Model.Address</p>

        <p class="info-label">Phone Number:</p>
        <p>@Model.PhoneNumber</p>

        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light mr-2">
                <i class="fas fa-home"></i> Return to Home
            </a>
            <a asp-controller="Account" asp-action="MyOrders" class="btn btn-outline-light">
                <i class="fas fa-box"></i> View My Orders
            </a>
        </div>

    </div>
</body>
</html>

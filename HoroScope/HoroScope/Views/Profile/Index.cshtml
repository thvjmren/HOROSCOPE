@model HoroScope.ViewModels.UserProfileVM

@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body {
        background-color: #331847;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        color: #f0e6ff;
        min-height: 100vh;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .profile-container {
        background: rgba(255, 255, 255, 0.1);
        padding: 40px 40px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        width: 400px;
        box-sizing: border-box;
        text-align: center;
    }

    h2 {
        margin-bottom: 30px;
        color: #f0e6ff;
        font-weight: 600;
        font-size: 28px;
    }

    form {
        text-align: left;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        color: #dcd0ff;
    }

    input.form-control, select.form-control {
        width: 100%;
        padding: 10px 12px;
        margin-bottom: 20px;
        border-radius: 4px;
        border: none;
        outline: none;
        box-sizing: border-box;
        font-size: 15px;
        background-color: rgba(255, 255, 255, 0.15);
        color: #fff;
    }

    input.form-control:focus, select.form-control:focus {
        box-shadow: 0 0 6px 2px rgba(155, 89, 182, 0.6);
        background-color: rgba(255, 255, 255, 0.2);
    }

    .profile-image {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        margin: 0 auto 20px auto;
        border: 2px solid #9b59b6;
    }

    .text-danger {
        color: #ff6b6b;
        font-size: 13px;
        margin-top: -16px;
        margin-bottom: 10px;
        display: block;
    }

    button.btn-outline-dark {
        width: 100%;
        padding: 12px;
        background-color: rgba(173, 128, 191, 0.47);
        border: none;
        color: white;
        font-weight: 700;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
        box-shadow: 0 4px 8px rgba(155, 89, 182, 0.4);
        transition: background-color 0.3s ease;
    }

    button.btn-outline-dark:hover {
        background-color: #7D3C98;
    }

    .success-message {
        color: #82ff82;
        margin-bottom: 15px;
        text-align: center;
        font-weight: 600;
    }
</style>

<div class="profile-container">
    <h2>My Profile</h2>

    @if (TempData["Success"] != null)
    {
        <div class="success-message">@TempData["Success"]</div>
    }

    <form method="post" enctype="multipart/form-data">
        <img src="@(!string.IsNullOrEmpty(Model.ProfileImageUrl) ? Model.ProfileImageUrl : "/images/default-avatar.png")" alt="Profile Image" class="profile-image" />

        <label asp-for="ProfilePhoto">Change Profile Photo</label>
        <input asp-for="ProfilePhoto" type="file" class="form-control" />
        <span asp-validation-for="ProfilePhoto" class="text-danger"></span>

        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <label asp-for="Surname">Surname</label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>

        <label asp-for="BirthDate">Birth Date</label>
        <input asp-for="BirthDate" type="date" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>

        <label asp-for="BirthTime">Birth Time</label>
        <input asp-for="BirthTime" type="time" class="form-control" />
        <span asp-validation-for="BirthTime" class="text-danger"></span>

        <label asp-for="BirthPlace">Birth Place</label>
        <input asp-for="BirthPlace" class="form-control" />
        <span asp-validation-for="BirthPlace" class="text-danger"></span>

        <label>Sun Sign</label>
        <input value="@Model.SunSign" class="form-control" readonly />

        <label>Rising Sign</label>
        <input value="@Model.RisingSign" class="form-control" readonly />

        <label>Moon Sign</label>
        <input value="@Model.MoonSign" class="form-control" readonly />

        <button type="submit" class="btn btn-outline-dark">Save Profile</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
